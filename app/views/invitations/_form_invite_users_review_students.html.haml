= "#{@invitation.student_entries.inspect}\n\n"
- provide(:title, "Review Invitations (#{I18n.t('invitations.form.messages.steps', index:3)})") 
= javascript_include_tag "form_utilities"
= javascript_include_tag "invitations"

%h2= "Review Invitations ( #{t('invitations.form.messages.steps', index:3)} )"


.row#review_instructions
  = t('invitations.form.review.invitations')

%br/
%br/
= form_for(@invitation, url: {action: :confirm }, method: :post, html: {:class => 'form-horizontal', :id => 'review_invitations'}) do |f|
  / id
  = hidden_field_tag(:id, @invitation.slug)

  = render 'form_label_program'
  = render 'form_label_user_level'
  = render 'form_label_number_of_invites', :count => @invitation.student_entries.count

  / divider
  .row
    .span2
    .span10.divider_line

  / address
  #invitation_group.row
    #email_group.span4.form-label.control-group{:class => @invitation.errors.messages[:recipient_emails].nil? ? "" : "error" }
      %span{:class=>"form-label text-info"}
        = "#{t('invitations.form.prompt.student_entries')}"
    .span8
      %table.table.table-striped#student_entries
        %thead
          %tr
            %th= t('terms.student_email')
            %th= t('terms.student_id')
        - @invitation.student_entries do |entry| 
          %tr
            %td= entry.email
            %td= entry.student_id

  %br/
  %br/

  = render 'form_action_menu', :back_page => address_invitations_path(@invitation), :f => f
