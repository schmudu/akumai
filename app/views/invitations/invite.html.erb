<% provide(:title, "Invite Users (Step 1 of 3)") %>
<h2>Send Invitations (Step 1 of 3)</h2>
<%= form_tag({},{:class => 'form-horizontal'}) do %>
  <div class="control-group">
    <%= label_tag(:program, "Program", :class => 'control-label') %>
    <%= select_tag(:program_id, options_for_select([['Lisbon', 1], ['Madrid', 2]])) %>
  </div>
  <div class="control-group">
    <%= label_tag(:invitation_type, "Invitation Type", :class => 'control-label') %>
    <%= label_tag(:invitation_type_admin, "Admin") %>
    <%= radio_button_tag(:invitation_type_admin, "Admin") %>
    <%= label_tag(:invitation_type_staff, "Staff") %>
    <%= radio_button_tag(:invitation_type_staff, "Staff") %>
    <%= label_tag(:invitation_type_student, "Student") %>
    <%= radio_button_tag(:invitation_type_student, "Student") %>
  </div>


  <div class="btn-group" data-toggle="buttons-radio">
  <%= radio_button_tag :brand, "ABC", :id=>"first", :style=>"display:none;" %>
  <label class="btn btn-primary">First</label>

</div>

<% end %>
